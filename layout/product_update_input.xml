<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editTextProductNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="Product Number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp"
        android:hint="Product Name"
        android:singleLine="true"
        android:layout_below="@+id/editTextProductNumber"/>

    <EditText
        android:id="@+id/editTextProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp"
        android:hint="Product Description"
        android:singleLine="true"
        android:layout_below="@+id/editTextProductName"/>

    <EditText
        android:id="@+id/editTextProductDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="Product Date"
        android:singleLine="true"
        android:layout_below="@+id/editTextProductDescription"/>/>

</RelativeLayout>